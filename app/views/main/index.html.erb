<div class="modal fade" id="galleryModal" tabindex="-1" aria-labelledby="galleryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title h4 fw-bold" id="galleryModalLabel">–ì–∞–ª–µ—Ä–µ—è</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
          <div class="modal-body">
            <div class="gallery-grid">
              <% image_files = Dir.glob("public/gallery/images/*.jpg") %>
              <% video_files = Dir.glob("public/gallery/videos/*.mp4") %>
            <img id="preview-image" src="" alt="Gallery preview" style="display: none;">
            <video id="preview-video" controls style="display: none;">
              <source src="" type="video/mp4">
            </video>
          </div>

        <div class="gallery-grid">
          <% (image_files + video_files).shuffle.each_with_index do |media_path, index| %>
            <div class="gallery-item <%= ['small', 'medium', 'large'].sample %>" data-index="<%= index %>">
              <% if media_path.include?('.jpg') %>
                <img src="/gallery/images/<%= File.basename(media_path) %>" alt="Gallery image">
              <% else %>
                <video controls>
                  <source src="/gallery/videos/<%= File.basename(media_path) %>" type="video/mp4">
                </video>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
